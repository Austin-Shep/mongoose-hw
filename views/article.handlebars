{{!-- this will be the page that displays the indv articles with comment sections--}}
<div class="container">
    <div class="row">
        <div class="col m12">
            <h2>
                <a href="{{article.link}}">
                    {{article.title}}
                </a>
            </h2>
            <img src="{{article.img}}" alt="thumbnail">
            <p class="blockquote">{{article.summary}}</p>
        </div>
    </div>
    <div class="row">
        <div class="col m12">
            {{#each article.comment}}
            <div class="section">
                <h5>{{this.poster}}</h5>
                <h6>{{this.title}}</h6>
                <p>{{this.body}}</p>
                <small>{{this.postedOn}}</small>
            </div>
            {{/each}}
            <form action="/article/{{article._id}}" method="post">
                <div class="row">
                    <div class="input-field col s6">
                        <input placeholder="Guest" id="username" type="text" class="validate">
                        <label for="username">Username</label>
                    </div>
                    <div class="input-field col s6">
                        <input id="title" type="text" class="validate">
                        <label for="title">Title</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <textarea id="comment" class="materialize-textarea"></textarea>
                        <label for="comment">Comment Here</label>
                    </div>
                </div>
                <button type="submit" class="btn">Submit</button>
            </form>
            {{!-- comment form box --}}
        </div>
    </div>
</div>